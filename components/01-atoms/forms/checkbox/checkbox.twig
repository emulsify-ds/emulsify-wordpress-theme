{% if not attributes %}
<fieldset class="form-item form-item--checkbox">
  <legend class="h3">Options as Checkboxes</legend>
  <ul class="form-item--checkboxes">
{% endif %}
  {% for key, checkbox in checkboxes %}
    {% include "@atoms/forms/checkbox/_checkbox-item.twig" with {
      checkbox_item: checkbox.title,
      checkbox_item_checked: checkbox.checked,
    } %}
  {% endfor %}
{% if not attributes %}
  </ul>
</fieldset>
{% endif %}
